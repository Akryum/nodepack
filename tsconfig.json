{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [
      "webpack-env"
    ],
    "noEmit": true
  },
  "include": [
    "packages/@nodepack/*/src/**/*", "packages/@nodepack/migrator/types/MigratorPlugin.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
